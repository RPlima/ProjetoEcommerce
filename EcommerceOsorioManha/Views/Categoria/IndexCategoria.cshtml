@using EcommerceOsorioManha.Models
@model List<Categoria>




<div>
    <p>
        <h2>Categorias</h2>
    </p>
    @*<a href="~/Views/Produto/Cadastrar"> Cadastrar Produto </a>*@

    @* Link em MVC | Razor *@



    <div>
        <table class="table table-hover">
            <tr class="table-secondary">
                <th>Nome</th>
                <th>Descrição</th>
                <th>Excluir</th>
                <th>Alterar</th>
            </tr>

            @foreach (Categoria categoriaCadastrado in Model)
            {
                <tr>
                    <td>@categoriaCadastrado.NomeCateg</td>
                    <td>@categoriaCadastrado.DescCategoria</td>
                    <td>@Html.ActionLink("Remover", "RemoverCategoria", "Categoria", new { id = categoriaCadastrado.CategoriaId }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Alterar", "AlterarCategoria", "Categoria", new { id = categoriaCadastrado.CategoriaId }, new { @class = "btn btn-primary" })</td>
                </tr>

            }

        </table>

    </div>
</div>