
@{
    Layout = null;
    DateTime data = ViewBag.Data;
    List<EcommerceOsorioManha.Models.Produto> produtos = ViewBag.Produtos;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gerenciamento de Produtos</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce - Jhonson", "Index", "Produto", null, new { @class = "navbar-brand" })

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Cadastrar Produto","CadastrarProduto","Produto",null,new { @class = "nav-link"})
                </li>

            </ul>
        </div>
    </nav>
    <div id="content" class="container" style="margin-top">
        <p>
            <h3>Gerenciamento de Produtos</h3>
        </p>
        @*<a href="~/Views/Produto/Cadastrar"> Cadastrar Produto </a>*@

        @* Link em MVC | Razor *@



        <div>
            <table class="table table-hover">
                <tr class="table-secondary">
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Categoria</th>
                    <th>Excluir</th>
                    <th>Alterar</th>
                </tr>

                @foreach (EcommerceOsorioManha.Models.Produto produtoCadastrado in produtos)
            {
                    <tr>
                        <td>@produtoCadastrado.Nome</td>
                        <td>@produtoCadastrado.Descricao</td>
                        <td>@produtoCadastrado.Preco</td>
                        <td>@produtoCadastrado.Categoria</td>
                        <td>@Html.ActionLink("Remover", "RemoverProduto", "Produto", new { id = produtoCadastrado.ProdutoId }, new { @class = "btn btn-primary" })</td>
                        <td>@Html.ActionLink("Alterar", "AlterarProduto", "Produto", new { id = produtoCadastrado.ProdutoId }, new { @class = "btn btn-primary" })</td>
                    </tr>


                }

            </table>
            <hr />
            <footer style="text-align: center; margin-top: 30px">
                <p>&copy; @DateTime.Now.Year - Desenvolvido por Raphael Lima</p>
            </footer>
        </div>
    </div>











</body>
</html>
