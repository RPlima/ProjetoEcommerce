
@{
    Layout = null;
    DateTime data = ViewBag.Data;
    List<EcommerceOsorioManha.Models.Produto> produtos = ViewBag.Produtos;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gerenciamento de Produtos</title>
</head>
<body>
        <h1>Gerenciamento de Produtos</h1>
        @*<a href="~/Views/Produto/Cadastrar"> Cadastrar Produto </a>*@

        @* Link em MVC | Razor *@
        @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto")

    
        <div>
            <table class="blueTable">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Categoria</th>
                    <th>Excluir</th>
                    <th>Alterar</th>
                </tr>

                @foreach (EcommerceOsorioManha.Models.Produto produtoCadastrado in produtos)
            {
                    <tr>
                        <td>@produtoCadastrado.Nome</td>
                        <td>@produtoCadastrado.Descricao</td>
                        <td>@produtoCadastrado.Preco</td>
                        <td>@produtoCadastrado.Categoria</td>
                        <td>@Html.ActionLink("Remover", "RemoverProduto", "Produto", new { id = produtoCadastrado.ProdutoId }, null)</td>
                        <td>@Html.ActionLink("Alterar", "AlterarProduto", "Produto", new { id = produtoCadastrado.ProdutoId }, null)</td>
                    </tr>


                }
            </table>
        </div>









    

</body>
</html>
